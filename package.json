{
  "name": "vscode-chat-with-context",
  "repository": {
    "url": "https://github.com/micahkatz/vscode-llm-with-context"
  },
  "displayName": "vscode-chat-with-context",
  "description": "A VS-Code extension that provides a LLM chat interface with editor context.",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.1.37"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/src/server/extension.js",
  "activationEvents": [],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeCompletions",
          "title": "LLM with Context",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "codeCompletions": [
        {
          "type": "webview",
          "id": "code-completion.webview",
          "name": "Chat",
          "icon": "media/icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "VS Code Chat With Context",
      "properties": {
        "vscode-chat-with-context.OPENAI_API_KEY": {
          "title": "OpenAI API Key",
          "type": "string",
          "default": "",
          "description": "Your OpenAI API Key."
        },
        "vscode-chat-with-context.OPENAI_MODEL": {
          "title": "OpenAI Model",
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "A valid OpenAI model tag"
        },
        "vscode-chat-with-context.OPENAI_BASE_URL": {
          "title": "OpenAI Base URL",
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "description": "A base url to make requests to. Can be substituted for a local LLM base URL"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "watch": "tsc -w -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/assert": "^1.5.10",
    "@types/mocha": "^10.0.7",
    "@types/webpack-env": "^1.18.5",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-web": "^0.0.58",
    "assert": "^2.1.0",
    "eslint": "^9.9.1",
    "mocha": "^10.7.3",
    "process": "^0.11.10",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "vscode": "^1.1.37",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}